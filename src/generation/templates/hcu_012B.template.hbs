<html>
    <head>
      <meta charset='UTF-8' />
	  <style>
      @page { 
        counter-reset: page 0;
      }
      body {
        background-color: white;
        color: black;
        font-size: 8px;
        font-family: arial;
        margin: 1px;
        padding: 1px;
      }
      main {
        padding-bottom: 30px;
      }
      footer {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 0 20px;
        height: 20px;
        display: flex;
        justify-content: space-between;
        font-weight: bold;
        background-color: white;
      }
      .page::after {
        content: counter(page);
      }

      table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 1px;
        border: 2px solid black;
        table-layout: auto;
      }

      .table2 {
        table-layout: unset;
      }
      img {
        max-height: 100px;
        width: auto;
      }

      td {
        min-width: 8px;
        text-align: center;
        border: 1px solid black;
        height: 8px;      
        }

      th {
        width: auto;
        text-align: center;
        border: 1px solid black;
        height: 10px;
        font-weight: bold;
        white-space: nowrap;
      }

      .th1 {
        text-align: left;
        font-size: 9px;
        background-color: #ccccff;
      }
      .th2 {
        background-color: #ccffcc;
      }

      .th3 {
        background-color: white;
      }
      .th4 {
        background-color: #ccccff;
        font-size: 9px;
        text-align: right;
      }
      .th5 {
        background-color: #ccffcc;
        width: 5px;
        text-align: left;
      }

      .td1 {
        text-align: left;
        /*width: max-content;*/
        white-space: nowrap;
      }

	  .td2 {
        text-align: left;
        /*width: max-content;*/
        white-space: nowrap;
		background-color: #ccffcc;
      }

      .td4j {
        height: 90px;
        text-align: justify;
        vertical-align: top;
      }

    .document__img__inf,
    .document__img__inf__a,
    .document__img__inf__b,
    .document__img__inf__c,
    .document__img__inf__d,
    .document__img__inf__e,
    .document__img__inf__f {
        width: 100%;
        margin-top: 5px;
        padding: 0;
    }

</style>
    </head>
    <body>
    <header></header>
    <main>

<div class='document__img__inf'>
    <div class='document__img__inf__a'>
        {{#with A}}
    <table>
    	<tr>
            <th class='th1' colspan="11">A. DATOS DEL ESTABLECIMIENTO Y USUARIO/ PACIENTE</th>
        </tr>
        <tr >
            <th class='th2' colspan="2">INSTITUCION DEL SISTEMA</th>
            <th class='th2'>UNICÓDIGO</th>
            <th class='th2' colspan="2">ESTABLECIMIENTO DE SALUD</th>
            <th class='th2' colspan="2">NUMERO DE HISTORIA CLÍNICA</th>
            <th class='th2' colspan="4">NUMERO DE ARCHIVO</th>
        </tr>
        <tr>
            <td colspan="2">{{institucion_sistema}}</td>
            <td>{{unicodigo}}</td>
            <td colspan="2">{{establecimiento_salud}}</td>
            <td colspan="2">{{numero_historia_clinica}}</td>
            <td colspan="4">{{numero_archivo}}</td>
        </tr>
        <tr>
            <th class='th2' rowspan="2">PRIMER APELLIDO</th>
            <th class='th2' rowspan="2">SEGUNDO APELLIDO</th>
            <th class='th2' rowspan="2">PRIMER NOMBRE</th>
            <th class='th2' rowspan="2">SEGUNDO APELLIDO</th>
            <th class='th2' rowspan="2">SEXO</th>
            <th class='th2' rowspan="2">FECHA NACIMIENTO</th>
            <th class='th2' rowspan="2">EDAD</th>
            <th class='th2' colspan="4">CONDICION EDAD</th>
        </tr>
        <tr>
            <th class='th2'>M</th>
            <th class='th2'>D</th>
            <th class='th2'>M</th>
            <th class='th2'>A</th>
            </tr>
        <tr>
            <td>{{primer_apellido}}</td>
            <td>{{segundo_apellido}}</td>
            <td>{{primer_nombre}}</td>
            <td>{{segundo_nombre}}</td>
            <td>{{sexo}}</td>
            <td>{{fecha_nacimiento}}</td>
            <td>{{edad}}</td>
            <td>{{#if condicion_edad.h}}X{{/if}}</td>
            <td>{{#if condicion_edad.d}}X{{/if}}</td>
            <td>{{#if condicion_edad.m}}X{{/if}}</td>
            <td>{{#if condicion_edad.a}}X{{/if}}</td>
        </tr>
        </table>
        {{/with}}
</div>
<div class='document__img__inf__b'>
	<table class="table2">
        {{#with B}}
    	<tr>
    		<th class='th1' colspan="10">B. DATOS DEL SERVICIO</th>
    	</tr>
    	<tr>
    		<th class='th2'>PROFESIONAL QUE REALIZA EL ESTUDIO</th>
    		<th class='th2'>FECHA DE REALIZACION</th>
    		<th class='th2'>PROFESIONAL SOLICITANTE</th>
    		<th class='th2' colspan="6">SERVICIO</th>
    		<th class='th2'>ESPECIALIDAD</th>
    	</tr>
    	<tr>
    		<td>{{personal_realiza}}</td>
    		<td>{{fecha_realizacion}}</td>
    		<td>{{profesional_realiza}}</td>
    		<td class='td2'>EMERGENCIA</td>
    		<td>{{#if servicio.emergencia}}X{{/if}}</td>
    		<td class='td2'>CONSULTA EXTERNA</td>
    		<td>{{#if servicio.consulta_externa}}X{{/if}}</td>
    		<td class='td2'>HOSPITALIZACION</td>
    		<td>{{#if servicio.hospitalizacion}}X{{/if}}</td>
    		<td>{{especialidad}}</td>
    	</tr>
	</table>
    {{/with}}
</div>
<div class='document__img__inf__c'>
	<table class="table2">
        {{#with C}}
		<tr>
			<th class='th1' colspan="22">C. ESTUDIO DE IMAGENOLOGIA REALIZADO</th>
		</tr>
		<tr>
			<th class='th2'>RX CONVENCIONAL</th>
			<td>{{#if rx_convencional}}X{{/if}}</td>
			<th class='th2'>RX PORTÁTIL</th>
			<td>{{#if rx_portatil}}X{{/if}}</td>
			<th class='th2'>TOMOGRAFÍA</th>
			<td>{{#if tomografia}}X{{/if}}</td>
			<th class='th2'>RESONANCIA</th>
			<td>{{#if resonancia}}X{{/if}}</td>
			<th class='th2'>ECOGRAFÍA</th>
			<td>{{#if ecografia}}X{{/if}}</td>
			<th class='th2'>MAMOGRAFÍA</th>
			<td>{{#if mamografia}}X{{/if}}</td>
			<th class='th2'>PROCEDIMIENTO</th>
			<td>{{#if procedimiento}}X{{/if}}</td>
			<th class='th2'>OTRO</th>
			<td>{{#if otro}}X{{/if}}</td>
			<th class='th2'>SEDACIÓN</th>
			<td>{{#if sedacion}}X{{/if}}</td>
			<th class='th2'>SI</th>
			<td>{{#if si}}X{{/if}}</td>
			<th class='th2'>NO</th>
			<td>{{#if no}}X{{/if}}</td>
		</tr>
		<tr>
    		<th class='th2'>DESCRIPCION</th>
    		<td class='td1' colspan="21">{{descripcion}}</td>
    	</tr>
	</table>
    {{/with}}
</div>
<div class='document__img__inf__d'>
	<table>
        {{#with D}}
		<tr>
			<th class='th1'>D. HALLAZGOS POR IMAGENOLOGÍA</th>
		</tr>
        <tr>
			<td class='td4j'>{{hallazgos}}</td>
		</tr>
	</table>
    {{/with}}
</div>
<div class='document__img__inf__e'>
	<table>
        {{#with E}}
		<tr>
			<th class='th1'>E. CONCLUSIONES Y SUGERENCIAS</th>
		</tr>
		<tr>
			<td class='td4j'>{{conclusiones}}</td>
		</tr>
	</table>
    {{/with}}
</div>
<div class='document__img__inf__f'>
	<table>
        {{#with F}}
		<tr>
			<th class='th1' colspan="5">F. DATOS DEL PROFESIONAL RESPONSABLE</th>
		</tr>
		<tr>
			<th class='th2'>FECHA</th>
			<th class='th2'>HORA</th>
			<th class='th2'>NOMBRES Y APELLIDOS</th>
			<th class='th2'>CEDULA</th>
			<th class='th2'>FIRMA</th>
		</tr>
		<tr>
			<td>{{fecha}}</td>
			<td>{{hora}}</td>
			<td>{{nombres_apellidos_resp}}</td>
			<td>{{cedula_resp}}</td>
			<td><img src={{firma_resp}}></td>
			</tr>
</div>
<div style="width:100%;padding-top: 3px">
    <table class="table table-bordered" style="font-size: 9px;width:100%;margin-bottom: 0px;padding: 0px;margin: 0px">
        <tbody>
            <th style="text-align: left;" >SNS-MSP / HCU-form.012B / 2021</th>
            <th style="text-align: right;font-size: 10px">IMAGENOLOGÍA - INFORME</th>
        </tbody>
    </table>
     {{/with}}
</div>